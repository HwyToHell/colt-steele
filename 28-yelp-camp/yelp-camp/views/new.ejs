<%- include('partials/header') %>

<div class="container">
    <h1 class="text-center">Create a new Campground</h1>     
    <div class="row justify-content-center">
        <div>
            <form action="/campgrounds" method="post">
                <div class="input-group mb-3">
                    <input class="form-control" type="text" name="name" placeholder="name" id="">
                </div>
                <div class="input-group mb-3">
                    <input class="form-control" type="text" name="image" placeholder="image url" id="">
                </div>
                <div>
                    <textarea name="comment" placeholder="comment here" id="" cols="30" rows="3"></textarea>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Add!</button>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>
    
<%- include('partials/footer') %>